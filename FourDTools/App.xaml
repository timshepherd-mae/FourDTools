<Application x:Class="FourDTools.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="">
    <Application.Resources>

        <!-- Murphy Brand Colours -->
        <Color x:Key="MurphyGreen">#FF00573F</Color>
        <Color x:Key="MurphyGreenLight">#FF6BAF9B</Color>
        <Color x:Key="NeutralDark">#FF1A1A1A</Color>
        <Color x:Key="NeutralLight">#FFF5F5F5</Color>

        <SolidColorBrush x:Key="MurphyGreenBrush" Color="{StaticResource MurphyGreen}" />
        <SolidColorBrush x:Key="MurphyGreenLightBrush" Color="{StaticResource MurphyGreenLight}" />
        <SolidColorBrush x:Key="NeutralDarkBrush" Color="{StaticResource NeutralDark}" />
        <SolidColorBrush x:Key="NeutralLightBrush" Color="{StaticResource NeutralLight}" />

        <!-- Window Background -->
        <SolidColorBrush x:Key="WindowBackgroundBrush" Color="{StaticResource NeutralLight}" />

        <!-- Button Styling -->
        <Style TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="{StaticResource MurphyGreenBrush}"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="BorderBrush" Value="{StaticResource MurphyGreenBrush}" />
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#CCC"/>
                    <Setter Property="Foreground" Value="#666"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource MurphyGreenLightBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- DataGrid Header Styling -->
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#EEEEEE"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="4"/>
        </Style>

    </Application.Resources>
</Application>