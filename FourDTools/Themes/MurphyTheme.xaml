<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Murphy Brand Colours -->
    <Color x:Key="MurphyGreen">#FF00573F</Color>
    <Color x:Key="MurphyGreenLight">#FF6BAF9B</Color>
    <Color x:Key="NeutralDark">#FF1A1A1A</Color>
    <Color x:Key="NeutralMid">#FF666666</Color>
    <Color x:Key="NeutralBorder">#FFDDDDDD</Color>
    <Color x:Key="NeutralLight">#FFF5F5F5</Color>
    <Color x:Key="SurfaceWhite">#FFFFFFFF</Color>
    <Color x:Key="SurfaceAlt">#FFFAFAFA</Color>
    <Color x:Key="HeaderGrey">#FFEEEEEE</Color>
    <Color x:Key="Warn">#FFF57C00</Color>
    <Color x:Key="Danger">#FFD32F2F</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="MurphyGreenBrush" Color="{StaticResource MurphyGreen}"/>
    <SolidColorBrush x:Key="MurphyGreenLightBrush" Color="{StaticResource MurphyGreenLight}"/>
    <SolidColorBrush x:Key="NeutralDarkBrush" Color="{StaticResource NeutralDark}"/>
    <SolidColorBrush x:Key="NeutralMidBrush" Color="{StaticResource NeutralMid}"/>
    <SolidColorBrush x:Key="NeutralBorderBrush" Color="{StaticResource NeutralBorder}"/>
    <SolidColorBrush x:Key="NeutralLightBrush" Color="{StaticResource NeutralLight}"/>
    <SolidColorBrush x:Key="SurfaceWhiteBrush" Color="{StaticResource SurfaceWhite}"/>
    <SolidColorBrush x:Key="SurfaceAltBrush" Color="{StaticResource SurfaceAlt}"/>
    <SolidColorBrush x:Key="HeaderGreyBrush" Color="{StaticResource HeaderGrey}"/>

    <!-- App-level -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="{StaticResource NeutralLight}"/>
    <SolidColorBrush x:Key="SeparatorBrush" Color="#1F000000"/>

    <!-- Typography -->
    <Style x:Key="TitleText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>

    <!-- Icon glyph (Segoe MDL2 Assets) -->
    <Style x:Key="IconGlyph" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,0,6,0"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>

    <!-- Primary Button -->
    <Style TargetType="Button" x:Key="PrimaryButton">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Background" Value="{StaticResource MurphyGreenBrush}"/>
        <Setter Property="Padding" Value="8,6"/>
        <Setter Property="Margin" Value="4,0,4,0"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="3">
                        <ContentPresenter VerticalAlignment="Center"
                                          HorizontalAlignment="Center"
                                          Margin="8,4"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.6"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{StaticResource MurphyGreenLightBrush}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Opacity" Value="0.9"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Flat Secondary Button (Grey) -->
    <Style TargetType="Button" x:Key="SecondaryButton" BasedOn="{StaticResource PrimaryButton}">
        <Setter Property="Background" Value="#FF888888"/>
    </Style>

    <!-- Titlebar buttons -->
    <Style x:Key="ChromeButton" TargetType="Button">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="{TemplateBinding Background}">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#20FFFFFF"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="#35FFFFFF"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- DataGrid -->
    <Style TargetType="DataGrid">
        <Setter Property="Background" Value="{StaticResource SurfaceWhiteBrush}"/>
        <Setter Property="RowBackground" Value="{StaticResource SurfaceAltBrush}"/>
        <Setter Property="AlternatingRowBackground" Value="{StaticResource SurfaceWhiteBrush}"/>
        <Setter Property="GridLinesVisibility" Value="Horizontal"/>
        <Setter Property="HorizontalGridLinesBrush" Value="{StaticResource NeutralBorderBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource MurphyGreenBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>

    <Style TargetType="DataGridColumnHeader">
        <Setter Property="Background" Value="{StaticResource HeaderGreyBrush}"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Padding" Value="6,4"/>
        <Setter Property="BorderBrush" Value="{StaticResource NeutralBorderBrush}"/>
        <Setter Property="BorderThickness" Value="0,0,0,1"/>
    </Style>

    <!-- Editors -->
    <Style TargetType="TextBox">
        <Setter Property="Padding" Value="4"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="{StaticResource NeutralBorderBrush}"/>
        <Setter Property="Background" Value="White"/>
    </Style>

    <Style TargetType="ComboBox">
        <Setter Property="Padding" Value="2"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="{StaticResource NeutralBorderBrush}"/>
        <Setter Property="Background" Value="White"/>
    </Style>

</ResourceDictionary>